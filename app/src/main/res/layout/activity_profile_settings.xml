<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/signup_signin_padding"
        android:layout_marginTop="@dimen/signup_signin_margintop">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gymlocation"
            android:hint="@string/gym_location"
            android:inputType="text"
            android:background="null"
            android:textSize="@dimen/signup_signin_textsize"
            android:padding="@dimen/signup_signin_padding"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gymlocationspinner"
            android:padding="@dimen/signup_signin_padding">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/signup_signin_padding"
        android:layout_marginTop="@dimen/signup_signin_margintop">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age"
            android:hint="@string/age"
            android:inputType="number"
            android:background="null"
            android:textSize="@dimen/signup_signin_textsize"
            android:padding="@dimen/signup_signin_padding"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/agespinner"
            android:padding="@dimen/signup_signin_padding">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/signup_signin_padding"
        android:layout_marginTop="@dimen/signup_signin_margintop">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:hint="@string/gender"
            android:inputType="text"
            android:background="null"
            android:textSize="@dimen/signup_signin_textsize"
            android:padding="@dimen/signup_signin_padding"/>
        <!--<RadioButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" -->
            <!--/>-->
    </LinearLayout>
</LinearLayout>