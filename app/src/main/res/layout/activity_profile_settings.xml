<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gymlocationtitle"
            android:text="Gym Location"
            android:textSize="@dimen/signup_signin_textsize"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/signup_signin_padding"
            android:layout_marginTop="@dimen/signup_signin_margintop">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gymlocation"
                android:hint="@string/gym_location"
                android:inputType="text"
                android:textSize="@dimen/signup_signin_textsize"
                android:padding="@dimen/signup_signin_padding"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gymlocationspinner"
                android:padding="@dimen/signup_signin_padding">
            </Spinner>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dobtitle"
            android:text="Date Of Birth"
            android:textSize="@dimen/signup_signin_textsize"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/signup_signin_padding"
            android:layout_marginTop="@dimen/signup_signin_margintop">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/age"
                android:hint="@string/dob"
                android:inputType="date"
                android:textSize="@dimen/signup_signin_textsize"
                android:padding="@dimen/signup_signin_padding"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dobbutton"
                android:text="Date"
                android:onClick="showDatePicker">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/signup_signin_padding"
            android:layout_marginTop="@dimen/signup_signin_margintop">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gendertitle"
                android:text="Gender"
                android:textSize="@dimen/signup_signin_textsize"/>
            <!--<RadioButton-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" -->
                <!--/>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>